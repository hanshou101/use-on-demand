{
  "include": [
    "sources/ts/ts-types/**/*.d.ts",
    "sources/ts/ts-types/**/*.ts",
    "sources/**/*.d.ts",
    "sources/**/*.ts",
    "sources/**/*.tsx",
    "sources/**/*.vue",
    "examples/**/*.ts",
    "examples/**/*.tsx",
    "examples/**/*.vue",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "outDir": "./lib",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "target": "es5",
    "module": "esnext",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "es5",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "noEmit": false,
    "strict": true,
    "noImplicitThis": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "allowJs": false,
    "downlevelIteration": true,
    "diagnostics": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": [
      "@types/node",
      "@nuxt/types",
      "webpack-env",
      "jest"
    ],
    "paths": {},
    "typeRoots": [],
    "resolveJsonModule": true,
    "importsNotUsedAsValues": "remove"
  }
}